<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/css/main.css" />
  </head>
  
  <body>
    <%-include ./partials/header.ejs  %> 
    <h2><%= title %></h2>
    <form class="item-edit-container"method="POST" >
      <label for="model">Model:
        <input type="text" id="model" name="model" value="" placeholder="Model name of the Item"/>
      </label>
     
      <label for="brand">Brand:
        <select type="text" id="brand" name="brand"  >
        
          <% brands.forEach(brand => { %>
                  <option value="<%=brand.id %>"><%=brand.name %></option>
          <% }) %>
          </select>
      </label>
      <label for="type">Type:
        <select type="text" id="type" name="type"  >
            <% types.forEach(type => { %>
                    <option value="<%=type.id %>"><%=type.attr %></option>
            <% }) %>
            </select>
            </label>
        <label for="summary">Summary:
          <textarea  id="summary" name="summary" placeholder="<%="Short summary about the item."%>">
          </textarea>
        </label>
       
        <label for="stock">Stock:
          <select type="text" id="stock" name="stock" value="">
            <option value="<%="In Stock"%>"><%="In Stock"%></option>
            <option value="<%="Few Left"%>"><%="Few Left"%></option>
            <option value="<%="Out of Stock"%>"><%="Out of Stock"%></option>
        </select>
        </label>
      
      <label for="price">Price:
        <input type="text" id="price" name="price" value="" placeholder="Price of the item in $" />
      </label>
      
      <button type="submit">Submit</button>
    </form>
    <% if (errors != null) { %>
     <% errors.forEach(error => { %>
        <p><%=error.msg %></p>
     <% }) %>
    <% } %>
    
  </body>
</html>
